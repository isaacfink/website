---
export type Role = {
  company: string;
  title: string;
  start: string;
  end: string;
};

const role = Astro.props;
---

<li class="flex gap-4">
  <div
    class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md shadow-main-800/5 ring-1 ring-main-900/5 dark:border dark:border-main-700/50 dark:bg-main-800 dark:ring-0"
  >
    <slot />
  </div>
  <dl class="flex flex-auto flex-wrap gap-x-2">
    <dt class="sr-only">Company</dt>
    <dd
      class="w-full flex-none text-sm font-medium text-main-900 dark:text-main-100"
    >
      {role.company}
    </dd>
    <dt class="sr-only">Role</dt>
    <dd class="text-xs text-main-500 dark:text-main-400">
      {role.title}
    </dd>
    <dt class="sr-only">Date</dt>
    <dd class="ml-auto text-xs text-main-400 dark:text-main-500">
      <span>{role.start}</span>{" "}
      <span aria-hidden="true">â€”</span>{" "}
      <span>{role.end}</span>
    </dd>
  </dl>
</li>
