---
import LogoPlanetaria from "./company-logos/Planeteria.astro";
import LogoAirbnb from "./company-logos/Airbnb.astro";
import LogoFacebook from "./company-logos/Facebook.astro";
import LogoStarbucks from "./company-logos/Starbucks.astro";
import Role from "./Role.astro";

const roles = [
  {
    company: "Planetaria",
    title: "CEO",
    logo: LogoPlanetaria,
    start: "2019",
    end: "Present",
  },
  {
    company: "Airbnb",
    title: "Product Designer",
    logo: LogoAirbnb,
    start: "2014",
    end: "2019",
  },
  {
    company: "Facebook",
    title: "iOS Software Engineer",
    logo: LogoFacebook,
    start: "2011",
    end: "2014",
  },
  {
    company: "Starbucks",
    title: "Shift Supervisor",
    logo: LogoStarbucks,
    start: "2008",
    end: "2011",
  },
];
---

<div class="rounded-2xl border border-main-100 p-6 dark:border-main-700/40">
  <h2 class="flex text-sm font-semibold text-main-900 dark:text-main-100">
    <svg
      viewBox="0 0 24 24"
      fill="none"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
      class="h-6 w-6 flex-none"
    >
      <path
        d="M2.75 9.75a3 3 0 0 1 3-3h12.5a3 3 0 0 1 3 3v8.5a3 3 0 0 1-3 3H5.75a3 3 0 0 1-3-3v-8.5Z"
        class="fill-main-100 stroke-main-400 dark:fill-main-100/10 dark:stroke-main-500"
      ></path>
      <path
        d="M3 14.25h6.249c.484 0 .952-.002 1.316.319l.777.682a.996.996 0 0 0 1.316 0l.777-.682c.364-.32.832-.319 1.316-.319H21M8.75 6.5V4.75a2 2 0 0 1 2-2h2.5a2 2 0 0 1 2 2V6.5"
        class="stroke-main-400 dark:stroke-main-500"></path>
    </svg>
    <span class="ml-3">Work</span>
  </h2>
  <ol class="mt-6 space-y-4">
    {roles.map((role, roleIndex) => <Role key={roleIndex} role={role} />)}
  </ol>
  <a href="#" class="group mt-6 w-full">
    Download CV
    <svg
      viewBox="0 0 16 16"
      fill="none"
      aria-hidden="true"
      class="h-4 w-4 stroke-main-400 transition group-active:stroke-main-600 dark:group-hover:stroke-main-50 dark:group-active:stroke-main-50"
    >
      <path
        d="M4.75 8.75 8 12.25m0 0 3.25-3.5M8 12.25v-8.5"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </a>
</div>
