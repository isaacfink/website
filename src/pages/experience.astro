---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout showFooter showHeader>
  <section class="section-container py-12 px-12">
    <h2
      class="text-white text-2xl flex space-x-3 items-center justify-center font-ibm"
    >
      My experience
    </h2>
    <div class="grid grid-cols-3 gap-5 max-w-3xl mx-auto mt-6">
      <div class="col-span-3 gap-3 grid grid-cols-2">
        <a
          href="/projects/restaurant-pos"
          class="-ml-3 p-3 rounded-xl hover:bg-main-800 block"
        >
          <h3 class="font-bm font-medium text-xl text-main-200">
            Restaurant management system
          </h3>
          <p class="mt-3 text-main-600">
            A feature rich management service for a local restaurant, complete
            with online ordering, hardware integration and an advanced back
            office management portal
          </p>
          <p class="mt-3 flex items-center gap-x-1 text-primary-700">
            Read case study
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-4 h-4"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </p>
        </a>
        <a
          href="/projects/scraper"
          class="-ml-3 p-3 rounded-xl hover:bg-main-800 block"
        >
          <h3 class="font-bm font-medium text-xl text-main-200">
            Real estate listings scraper
          </h3>
          <p class="mt-3 text-main-600">
            A scraper that scrapes for available proerties and manages
            applications, integrated with salesforce and dropbox
          </p>
          <p class="mt-3 flex items-center gap-x-1 text-primary-700">
            Read case study
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-4 h-4"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </p>
        </a>
        <a
          href="/projects/invitations-platform"
          class="-ml-3 p-3 rounded-xl hover:bg-main-800 block"
        >
          <h3 class="font-bm font-medium text-xl text-main-200">
            Invitations platform
          </h3>
          <p class="mt-3 text-main-600">
            A cool invitations platform that allows users to customize templates
            and send out invitations to their friends and family
          </p>
          <p class="mt-3 flex items-center gap-x-1 text-primary-700">
            Read case study
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-4 h-4"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
            </svg>
          </p>
        </a>
      </div>
      <div class="col-span-3">
        <div class="rounded-xl border border-main-800 p-3">
          <h3 class="flex items-center gap-x-3 px-3 mt-1">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
              class="h-6 w-6 flex-none"
              ><path
                d="M2.75 9.75a3 3 0 0 1 3-3h12.5a3 3 0 0 1 3 3v8.5a3 3 0 0 1-3 3H5.75a3 3 0 0 1-3-3v-8.5Z"
                class="fill-zinc-100 stroke-zinc-400 dark:fill-zinc-100/10 dark:stroke-zinc-500"
              ></path><path
                d="M3 14.25h6.249c.484 0 .952-.002 1.316.319l.777.682a.996.996 0 0 0 1.316 0l.777-.682c.364-.32.832-.319 1.316-.319H21M8.75 6.5V4.75a2 2 0 0 1 2-2h2.5a2 2 0 0 1 2 2V6.5"
                class="stroke-zinc-400 dark:stroke-zinc-500"></path></svg
            ><span class="font-medium text-main-200">Work experience</span>
          </h3>
          <div class="flex flex-col gap-y-3">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-1 mt-6">
                <div
                  class="h-12 w-12 rounded-full overflow-hidden flex items-center justify-center border border-main-800"
                >
                  <img src="/blink-logo.png" alt="" class="h-8 w-8" />
                </div>
                <div class="">
                  <h3 class="text font-medium text-main-300">Blink payments</h3>
                  <p class="text-main-500 text-sm">Full stack developer</p>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-1 mt-6">
                <div
                  class="h-12 w-12 rounded-full overflow-hidden flex items-center justify-center border border-main-800"
                >
                  <img src="/tw-logo.svg" alt="" class="h-8 w-8" />
                </div>
                <div class="">
                  <h3 class="text font-medium text-main-300">Triple whale</h3>
                  <p class="text-main-500 text-sm">Full stack developer</p>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-1 mt-6">
                <div
                  class="h-12 w-12 rounded-full overflow-hidden flex items-center justify-center border border-main-800"
                >
                  <img src="/charity-extra-logo.png" alt="" class="h-8 w-8" />
                </div>
                <div class="">
                  <h3 class="text font-medium text-main-300">Charity extra</h3>
                  <p class="text-main-500 text-sm">Full stack developer</p>
                </div>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-x-1 mt-6">
                <div
                  class="h-12 w-12 rounded-full overflow-hidden flex items-center justify-center border border-main-800"
                >
                  <img src="/zunta-logo.svg" alt="" class="h-8 w-8" />
                </div>
                <div class="">
                  <h3 class="text font-medium text-main-300">Zunta</h3>
                  <p class="text-main-500 text-sm">Full stack developer</p>
                </div>
              </div>
            </div>

            <a
              href="/resume-isaac-finkelstein.pdf"
              download="Isaac-Finkelstein-resume.pdf"
              class="mt-3 rounded-lg py-3 flex items-center justify-center gap-x-2 bg-main-800 text-main-400 hover:bg-main-700"
            >
              <span>Download CV</span>
              <span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  class="w-5 h-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
                  ></path>
                </svg>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
